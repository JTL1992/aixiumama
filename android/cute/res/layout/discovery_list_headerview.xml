<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/top_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有共同话题的宝妈"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"/>


    <com.harmazing.aixiumama.view.HorizontalListView
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_margin="5dp"
        android:id="@+id/horizon_listview"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey"
 />

    <!--被cute最多-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cute_most_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="今日被赞最多"
        android:layout_marginLeft="20dp"

        android:gravity="center_vertical|left"
        android:textSize="15sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >


        <ImageView
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/blank"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/big_imageView"/>


        <LinearLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/blank"
                android:id="@+id/right_imageview1"/>

            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/blank"
                android:scaleType="centerCrop"
                android:id="@+id/right_imageview2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/blank"
                android:id="@+id/right_imageview3"/>

            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/blank"
                android:scaleType="centerCrop"
                android:id="@+id/right_imageview4"
                />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey"
        android:layout_marginTop="10dp" />
    <!--今日热门帖纸-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="今日热门帖纸"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical|left"
        android:id="@+id/sticker_hot"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:id="@+id/sticker_banner"
        android:src="@drawable/blank"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/sticker1" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/sticker2" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/sticker3" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/sticker4" />


    </LinearLayout>
</LinearLayout>