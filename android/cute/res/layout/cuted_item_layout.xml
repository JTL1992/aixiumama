<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/transparent"
            android:id="@+id/flag"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="两天前"
            android:id="@+id/day"
            android:layout_margin="5dp"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout1"
            android:layout_below="@+id/day"
            android:background="@color/light_grey"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/image_cute"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_person"
                android:layout_alignLeft="@+id/image_cute"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name"
                android:id="@+id/visit_layout"
                android:layout_toRightOf="@+id/image_person"
                android:layout_alignBottom="@+id/image_person"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textContent"
                android:layout_below="@+id/image_person"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/day"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/flag"
            android:layout_marginLeft="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textcontent2"
                android:layout_below="@+id/image_person2"
                android:layout_margin="5dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name"
                android:id="@+id/text_name"
                android:layout_alignBottom="@+id/image_person2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image_person2"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/image_cute2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_person2"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="20dp"
                android:layout_alignLeft="@+id/image_cute2" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>