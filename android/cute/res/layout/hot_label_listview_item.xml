<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/hot_label_item_layout"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blank"
            android:id="@+id/icon"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:minHeight="60dp"
            android:minWidth="60dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是热门标签"
                android:id="@+id/hot_label_name"
                android:layout_alignParentLeft="true"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4562张图片"
                android:gravity="right"
                android:id="@+id/pic_num"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/hot_label_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是标签、活动、品牌等的一句话介绍"
                android:id="@+id/text"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/hot_label_name"
                android:textSize="14sp"
                android:textColor="@color/font_grey"
                android:layout_below="@+id/hot_label_name"
                android:layout_margin="3dp"
                android:maxLines="3" />

            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/image1"
            android:minWidth="60dp"
            android:minHeight="60dp"
            android:maxWidth="80dp"
            android:maxHeight="80dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/image2"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:minHeight="60dp"
            android:minWidth="60dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/image3"
            android:maxWidth="80dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:maxHeight="80dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/blank"
            android:id="@+id/image4"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:minHeight="60dp"
            android:minWidth="60dp" />


    </LinearLayout>


</LinearLayout>