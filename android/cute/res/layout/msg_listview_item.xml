<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >
    <com.harmazing.aixiumama.view.RoundedImageView
        xmlns:cute="http://schemas.android.com/apk/res/com.harmazing.aixiumama"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/receiver_icon"
        android:scaleType="centerCrop"
        cute:corner_radius="10dp"
        cute:round_background="true"
        android:background="@drawable/icon_circle_title1"
        android:visibility="visible"
        android:layout_marginLeft="5dp" />
   <!-- <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/blank"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:id="@+id/receiver_icon" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/layout"
        android:layout_toRightOf="@+id/receiver_icon"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mum_name"

            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/mum_name"
            android:id="@+id/typeTxt" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"

            android:id="@+id/message"
            android:layout_marginTop="2dp"
            android:layout_below="@id/mum_name"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_marginTop="5dp"

            android:id="@+id/date_before"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textSize="12sp"
            android:textColor="@color/middle_grey" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/blank"
            android:layout_alignParentRight="true"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:id="@+id/cute_image"
            android:focusable="false" />

        </RelativeLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/redpoint"
        android:background="@drawable/circle_red"
        android:visibility="invisible" />
</RelativeLayout>