<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="WidgetTitleBar">

        <!-- 设置左布局的背景，有默认背景 -->
        <attr name="left_bg" format="reference" />
        <!-- 设置左布局按钮的背景，有默认返回背景 -->
        <attr name="left_view_bg" format="reference" />
        <!-- 设置左布局按钮的文字 -->
        <attr name="left_view_text" format="string" />
        <!-- 设置左布局的是否可见，默认可见 -->
        <attr name="left_visibility" format="string" />
        <!-- 设置actionbar布局的背景，默认可见 -->
        <attr name="bg_title" format="reference" />
        <!-- 设置右布局按钮的背景 -->
        <attr name="right_bg" format="reference" />
        <!-- 设置右布局按钮的背景 -->
        <attr name="right_view_bg" format="reference" />
        <!-- 设置右布局按钮的文字 -->
        <attr name="right_view_text" format="string" />
        <!-- 设置左布局的可见性，默认可见 -->
        <attr name="right_visibility" format="string" />


        <!-- 设置中间布局的可见性 -->
        <attr name="center_visibility" format="string" />
        <!-- 设置中间Text的文字 -->
        <attr name="center_view_text" format="string" />

    </declare-styleable>

    <declare-styleable name="CircularImage">
        <attr name="mask_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="round_background" format="boolean" />
        <attr name="is_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <attr name="textwidth" format="integer"/>
    <attr name="typeface">
        <enum name="normal" value="0"/>
        <enum name="sans" value="1"/>
        <enum name="serif" value="2"/>
        <enum name="monospace" value="3"/>
    </attr>

    <declare-styleable name="CYTextView">
        <attr name="textwidth" />
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="LabeltextView">
        <attr name="text" format="string" />

    </declare-styleable>


    <declare-styleable name="RoundedImageView1">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>









</resources>